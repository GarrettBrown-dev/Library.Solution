@{
  Layout = "_Layout";
}
@using Library.Models;
@model IEnumerable<Library.Models.Author>

<br>
<h1>Authors</h1>

@if (@Model.Any())
{
  <ul>
    @foreach (Author author in Model)
    {
      <li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li>
    }
  </ul>
}
else
{
  <h3>No authors have been added yet!</h3>
}

<br>
<h5>@Html.ActionLink("Add new author", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>
<h5>@Html.ActionLink("Look up an author", "Search")</h5>
