@{
  Layout = "_Layout";
}

@model Library.Models.Catalog

<h2>Edit</h2>

<h4>Edit this catalog: @Html.DisplayFor(model => model.CatalogName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CatalogId)

  @Html.LabelFor(model => model.CatalogName)
  @Html.EditorFor(model => model.CatalogName)

  <input type="submit" value="Save" />
}
<h5>@Html.ActionLink("Back to catalogs", "Index")</h5>