@{
  Layout = "_Layout";
}
@using Library.Models;
@model List<Library.Models.Catalog>;

<br>
<h1>Catalogs</h1>

@if (@Model.Count == 0)
{
  <h3>No catalogs have been added yet!</h3>
}

@foreach (Catalog catalog in Model)
{
  <li>@Html.ActionLink($"{catalog.CatalogName}", "Details", new { id = catalog.CatalogId })</li>
}
<br>
<h5>@Html.ActionLink("Add new catalog", "Create")</h5>
<h5>@Html.ActionLink("Home", "Index", "Home")</h5>
<h5>@Html.ActionLink("Look up an catalog", "Search")</h5>
