@{
  Layout = "_Layout";
}
@using Library.Models;
@model List<Library.Models.Catalog>;

<br>
<h1>Catalogs</h1>

@if (@Model.Count == 0)
{
  <h3>No catalogs have been added yet!</h3>
}

@foreach (Catalog catalog in Model)
{
  <li>@Html.ActionLink($"{catalog.CatalogName}", "Details", new { id = catalog.CatalogId }, new {@class="linkHelper"})
  </li>
}
<br>
<p>@Html.ActionLink("Add new catalog", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>
<p>@Html.ActionLink("Look up an catalog", "Search", null, null, new {@class="btn btn-info btn-sm"})</p>
