@{
  Layout = "_Layout";
}

@using Library.Models;
@model List<Library.Models.Book>;

<h2>Search Results</h2>
<hr />

@if (@Model.Count == 0)
{
  <p>No books matched!</p>
}
else
{
  @foreach (Book book in Model)
  {
    <li>@Html.ActionLink($"{book.BookName}", "Details", new {id = book.BookId })</li>
  }
}
