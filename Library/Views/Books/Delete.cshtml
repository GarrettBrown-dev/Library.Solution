@{
  Layout = "_Layout";
}

@model Library.Models.Book

<h2>Are you sure you want to delete this book from your library catalog?</h2>

@Html.DisplayNameFor(model => model.BookName): @Html.DisplayFor(model => model.BookId)
@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
}
<br>
<p>@Html.ActionLink("Cancel", "Details", null, new {id = Model.BookId }, new {@class="btn btn-info btn-sm"})</p>